package udm

import (
	"fmt"
	"time"
)

// ProgressBarDemo demonstrates the complete progress bar integration
func ProgressBarDemo() {
	fmt.Println("ğŸ¨ UDM Enhanced Progress Bar Demo")
	fmt.Println("==================================")
	fmt.Println()
	fmt.Println("This demo will show:")
	fmt.Println("âœ¨ Beautiful progress bar with green/yellow states")
	fmt.Println("ğŸ“Š Real-time download progress and speed")
	fmt.Println("ğŸ§µ Multi-stream chunk progress tracking")
	fmt.Println("â¸ï¸ â–¶ï¸ Pause/Resume functionality with visual feedback")
	fmt.Println("ğŸ¯ Completion message with download statistics")
	fmt.Println()
	fmt.Println("Press Ctrl+C to exit the progress bar at any time")
	fmt.Println()

	// Create a multi-stream downloader with progress bar
	downloader := &Downloader{
		Url: "https://httpbin.org/bytes/15728640", // 15MB test file
		ID:  "progress-bar-demo",
		Prefs: UserPreferences{
			DownloadDir: "./downloads",
			fileName:    "progress-demo.bin",
			threadCount: 6, // 6 chunks for nice chunk display
			maxRetries:  3,
		},
		Headers: CustomHeaders{
			Headers: map[string]string{
				"User-Agent": "UDM-ProgressBar-Demo/1.0",
			},
		},
		UseProgressBar: true, // Enable the beautiful progress bar
	}

	// Create progress manager
	progressManager := NewProgressManager(downloader)

	// Setup callbacks for progress bar integration
	SetupProgressCallbacks(downloader, progressManager)

	// Demonstrate interactive controls
	go func() {
		time.Sleep(3 * time.Second)
		fmt.Println("ğŸ”„ Demonstrating pause functionality...")
		downloader.Pause()

		time.Sleep(4 * time.Second)
		fmt.Println("ğŸ”„ Demonstrating resume functionality...")
		downloader.Resume()

		time.Sleep(3 * time.Second)
		fmt.Println("ğŸ”„ One more pause to show the yellow bar...")
		downloader.Pause()

		time.Sleep(2 * time.Second)
		fmt.Println("ğŸ”„ Final resume to completion...")
		downloader.Resume()
	}()

	// Start the download with the enhanced progress bar
	fmt.Println("ğŸš€ Starting download with enhanced progress bar...")
	fmt.Println()
	downloader.StartDownload()
}

